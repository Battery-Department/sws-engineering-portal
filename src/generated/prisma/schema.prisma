  projectId  String?
  supplier   String
  material   String
  quantity   Float
  unitCost   Float
  totalCost  Float
  invoiceRef String?
  date       DateTime
  category   String? // "steel", "hardware", "electrical", etc.

  project Project? @relation(fields: [projectId], references: [id])

  createdAt DateTime @default(now())

  @@index([projectId])
  @@index([supplier])
  @@index([category])
}

